# ─────────────────────────────────────────────────────────────────────────────
# infra/.env  —  local development defaults
# Safe to commit (no real secrets).
# Override locally with .env.local (gitignored).
# ─────────────────────────────────────────────────────────────────────────────

# ── PostgreSQL ────────────────────────────────────────────────────────────────
POSTGRES_ROOT_PASSWORD=postgres

# ── Application DB (created by postgres/init/01-init-databases.sql) ──────────
APP_DB_NAME=template_db
APP_DB_USER=template_user
APP_DB_PASSWORD=template_pass

# ── Keycloak DB (created by postgres/init/01-init-databases.sql) ─────────────
KEYCLOAK_DB_NAME=keycloak_db
KEYCLOAK_DB_USER=keycloak_user
KEYCLOAK_DB_PASSWORD=keycloak_pass

# ── Keycloak admin console ────────────────────────────────────────────────────
# NOTE: update KEYCLOAK_VERSION to match quay.io/keycloak/keycloak tags
KEYCLOAK_VERSION=26.1.4
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# ── WireMock ──────────────────────────────────────────────────────────────────
WIREMOCK_VERSION=latest

# ── Mailpit ───────────────────────────────────────────────────────────────────
MAILPIT_VERSION=latest

